<h1>Eat Da Burger!</h1>

<img src="assets/img/burger.png" alt="icon of burger">

<div class="lists">
  <div class = "list" id="list1">
    <h2>To Be Devoured</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=0}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class = "list" id="list2">
    <h2>Devoured</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          <li>{{burger_name}}</li> 
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="input">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>
